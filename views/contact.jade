extends layout

block content
  .container-fluid.bg-primary.py-5.mb-5.page-header3
    .container.py-5
      .row.justify-content-center
        .col-lg-10.text-center
          h1.display-3.text-white.animated.slideInDown Contact
          nav(aria-label='breadcrumb')
            ol.breadcrumb.justify-content-center
              li.breadcrumb-item
                a.text-white(href='/index') Home
              li.breadcrumb-item.text-white.active(aria-current='page') Contact
    // Header End
    // Contact Start
  .container-xxl.py-5
    .container
      .text-center.wow.fadeInUp(data-wow-delay='0.1s')
        h6.section-title.bg-white.text-center.text-primary.px-3 Contact Us
        h1.mb-5 Contact For Any Query
      .row.g-4
        .col-lg-4.col-md-6.wow.fadeInUp(data-wow-delay='0.1s')
          h5 Get In Touch
          p.mb-4
            | We’re available to talk to you at any point of time – all you need to do is fill out the form, email us, or call us to chat and book a tour! 
          .d-flex.align-items-center.mb-3
            .d-flex.align-items-center.justify-content-center.flex-shrink-0.bg-primary(style='width: 50px; height: 50px;')
              i.fa.fa-map-marker-alt.text-white
            .ms-3
              h5.text-primary Office
              p.mb-0 3 Leyton Ave, Scarborough
          .d-flex.align-items-center.mb-3
            .d-flex.align-items-center.justify-content-center.flex-shrink-0.bg-primary(style='width: 50px; height: 50px;')
              i.fa.fa-phone-alt.text-white
            .ms-3
              h5.text-primary Mobile
              p.mb-0 +1 647 780 3079
          .d-flex.align-items-center
            .d-flex.align-items-center.justify-content-center.flex-shrink-0.bg-primary(style='width: 50px; height: 50px;')
              i.fa.fa-envelope-open.text-white
            .ms-3
              h5.text-primary Email
              p.mb-0 info@afzaelearning.com
        .col-lg-4.col-md-6.wow.fadeInUp(data-wow-delay='0.3s')
          iframe.position-relative.rounded.w-100.h-100(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2884.8855623410623!2d-79.2794221849925!3d43.692142457930565!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89d4ce90c672e19d%3A0x6b336d96ccd7cc6d!2s3%20Leyton%20Ave%2C%20Scarborough%2C%20ON%20M1L%203T5!5e0!3m2!1sen!2sca!4v1644367194494!5m2!1sen!2sca' frameborder='0' style='min-height: 300px; border:0;' allowfullscreen='' aria-hidden='false' tabindex='0')
        .col-lg-4.col-md-12.wow.fadeInUp(data-wow-delay='0.5s')
          form(action='contact' method='post')
            .row.g-3
              .col-md-6
                .form-floating
                  input#name.form-control(type='text' name='cName' placeholder='Your Name')
                  label(for='name') Your Name
              .col-md-6
                .form-floating
                  input#email.form-control(type='email' name='email' placeholder='Your Email')
                  label(for='email') Your Email
              .col-12
                .form-floating
                  input#subject.form-control(type='text' name='subject' placeholder='Subject')
                  label(for='subject') Subject
              .col-12
                .form-floating
                  textarea#message.form-control(name='message' placeholder='Leave a message here' style='height: 150px')
                  label(for='message') Message
              .col-12
                button.btn.btn-primary.w-100.py-3(type='submit') Send Message
              p=contactmess
    // Contact End

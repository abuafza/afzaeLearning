extends layout

block content
  .container-fluid.bg-primary.py-5.mb-5.page-header
    .container.py-5
      .row.justify-content-center
        .col-lg-10.text-center
          h1.display-3.text-white.animated.slideInDown About Us
          nav(aria-label='breadcrumb')
            ol.breadcrumb.justify-content-center
              li.breadcrumb-item
                a.text-white(href='/index') Home
              li.breadcrumb-item.text-white.active(aria-current='page') About
    //- // Header End
    //- // Service Start
  .container-xxl.py-5
    .container
      .row.g-4
        .col-lg-3.col-sm-6.wow.fadeInUp(data-wow-delay='0.1s')
          .service-item.text-center.pt-3
            .p-4
              i.fa.fa-3x.fa-graduation-cap.text-primary.mb-4
              h5.mb-3 Skilled Instructors
              p World class experienced Instructor
        .col-lg-3.col-sm-6.wow.fadeInUp(data-wow-delay='0.3s')
          .service-item.text-center.pt-3
